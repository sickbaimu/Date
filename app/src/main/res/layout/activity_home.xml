<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:background="@color/White"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/fl_title"
            app:layout_heightPercent="10%"
            app:layout_widthPercent="100%"
            android:background="@drawable/shadow_2"
            android:layout_gravity="top"
            >
            <ImageView
                android:id="@+id/b_drawer"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/my_null"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/menu"
                />
            <TextView
                style="@style/MyTextView"
                android:background="@color/Transparent"
                android:text="西南交通大学会议室"
                />
        </FrameLayout>
        <LinearLayout
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/ll_type"
            android:layout_below="@+id/fl_title"
            app:layout_heightPercent="5%"
            app:layout_widthPercent="100%"
            android:orientation="horizontal"
            >
            <Button
                android:textSize="16sp"
                android:layout_weight="1"
                android:id="@+id/b_type_room"
                android:gravity="center"
                android:textColor="@color/Blue"
                android:background="@color/Transparent"
                android:text="按房间"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="@color/Gray"
                android:id="@+id/b_type_time"
                android:gravity="center"
                android:background="@color/Transparent"
                android:text="按时间"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="@color/Gray"
                android:id="@+id/b_type_member"
                android:gravity="center"
                android:background="@color/Transparent"
                android:text="按人员"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <GridView
            android:visibility="invisible"
            android:padding="10dp"
            android:id="@+id/grid_view"
            app:layout_heightPercent="77%"
            app:layout_widthPercent="100%"
            android:columnWidth="90dp"
            android:layout_below="@+id/ll_type"
            android:layout_gravity="center"
            android:horizontalSpacing="10dp"
            android:numColumns="auto_fit"
            android:stretchMode="spacingWidthUniform"
            android:verticalSpacing="10dp" />
        <LinearLayout
            android:visibility="invisible"
            android:padding="10dp"
            android:id="@+id/timeView"
            app:layout_heightPercent="77%"
            app:layout_widthPercent="100%"
            android:orientation="vertical"
            android:layout_below="@+id/ll_type"
            android:layout_gravity="center">
            <Button
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/selectDate"
                android:gravity="center"
                android:textSize="22sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="start"
                android:text="@string/hint_date_label"
                android:textColor="@color/Blue"
                android:background="@color/Transparent" />
            <Button
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/selectTimeBegin"
                android:gravity="center"
                android:textSize="22sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="start"
                android:text="开始时间：14:00"
                android:textColor="@color/Blue"
                android:background="@color/Transparent" />
            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="22sp"
                    android:textColor="@color/Blue"
                    android:text="持续分钟："
                    />
                <ImageView
                    android:id="@+id/b_sub"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:background="@drawable/left"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    />
                <TextView
                    android:id="@+id/time"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:textColor="@color/Blue"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="60"/>
                <ImageView
                    android:id="@+id/b_add"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:background="@drawable/right"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/b_time_next"
                style="@style/MyButton"
                android:text="获取空闲房间" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/memberView"
            android:orientation="vertical"
            android:layout_below="@+id/ll_type"
            android:layout_gravity="center"
            app:layout_heightPercent="77%"
            app:layout_widthPercent="100%"
            android:padding="16dp"
            >
            <com.lele.date.layout.AutoLinefeedLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/autolinefeedlayout" />
            <Button
                android:id="@+id/b_member_next"
                android:text="选择房间和时间"
                style="@style/MyButton"/>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/grid_view"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            app:layout_heightPercent="8%"
            app:layout_widthPercent="100%">
            <ImageView
                android:id="@+id/b_my_sign"
                android:contentDescription="@string/my_null"
                android:src="@drawable/medal"
                android:layout_weight="1"
                android:background="@color/Transparent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                />
            <ImageView
                android:id="@+id/b_my_message"
                android:contentDescription="@string/my_null"
                android:src="@drawable/message"
                android:layout_weight="1"
                android:background="@color/Transparent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                />
            <ImageView
                android:id="@+id/b_book"
                android:contentDescription="@string/my_null"
                android:src="@drawable/c10"
                android:layout_weight="1"
                android:background="@color/Transparent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                />
        </LinearLayout>

    </android.support.percent.PercentRelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="start"
        android:background="@color/White"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@drawable/shadow_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <ImageView
                android:contentDescription="@string/user_face_dsp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/face"/>
            <TextView
                android:id="@+id/t_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="@color/White"/>
            <TextView
                android:id="@+id/t_userlevel"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/White"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:layout_gravity="center"
                android:layout_weight="3"
                android:gravity="center"
                android:contentDescription="@string/ui_dsp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/setting"/>
            <Button
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:text="@string/system_setting_label"
                android:textSize="20sp"
                android:gravity="start|center_vertical"
                android:textColor="@color/Blue"
                android:id="@+id/b_system_setting" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:layout_gravity="center"
                android:layout_weight="3"
                android:gravity="center"
                android:contentDescription="@string/ui_dsp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/user2"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/b_personal_setting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:text="@string/personal_info_update_label"
                android:textSize="20sp"
                android:gravity="start|center_vertical"
                android:textColor="@color/Blue" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:layout_gravity="center"
                android:layout_weight="3"
                android:gravity="center"
                android:contentDescription="@string/ui_dsp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/medal"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/b_my_firm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:text="@string/my_organization_info"
                android:textSize="20sp"
                android:gravity="start|center_vertical"
                android:textColor="@color/Blue" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:layout_gravity="center"
                android:layout_weight="3"
                android:gravity="center"
                android:contentDescription="@string/ui_dsp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/download"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/b_version"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:text="@string/version_and_feedback_label"
                android:textSize="20sp"
                android:gravity="start|center_vertical"
                android:textColor="@color/Blue" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:layout_gravity="center"
                android:layout_weight="3"
                android:gravity="center"
                android:contentDescription="@string/ui_dsp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logout"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/b_logout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:text="@string/logout_label"
                android:textSize="20sp"
                android:gravity="start|center_vertical"
                android:textColor="@color/Blue" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:layout_gravity="center"
                android:layout_weight="3"
                android:gravity="center"
                android:contentDescription="@string/ui_dsp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/exit"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/b_exit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:text="@string/exit_label"
                android:textSize="20sp"
                android:gravity="start|center_vertical"
                android:textColor="@color/Blue" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>