<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/White"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        style="@style/MyTextView"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%"
        android:text="填写预约订单"
        />
    <ScrollView
        app:layout_heightPercent="90%"
        app:layout_widthPercent="100%"
        android:layout_gravity="bottom">
        <LinearLayout
            android:padding="10dp"
            android:id="@+id/timeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.percent.PercentFrameLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
                <TextView
                    app:layout_widthPercent="30%"
                    app:layout_heightPercent="100%"
                    android:text="会议主题："
                    android:textSize="20sp"
                    android:layout_gravity="start|center_vertical"
                    android:gravity="start|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/edit_theme"
                    app:layout_widthPercent="70%"
                    app:layout_heightPercent="100%"
                    android:layout_gravity="end"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:textColor="@color/Blue"
                    android:textColorHint="@color/Blue"
                    android:hint="未命名"
                    android:text="未命名"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </android.support.percent.PercentFrameLayout>
            <android.support.percent.PercentFrameLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
                <TextView
                    app:layout_widthPercent="30%"
                    app:layout_heightPercent="100%"
                    android:text="举办日期："
                    android:textSize="20sp"
                    android:layout_gravity="start|center_vertical"
                    android:gravity="start|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    app:layout_widthPercent="70%"
                    app:layout_heightPercent="100%"
                    android:layout_gravity="end"
                    android:id="@+id/selectDate"
                    android:gravity="start|center_vertical"
                    android:textSize="22sp"
                    android:text="2019-2-22"
                    android:textColor="@color/Blue"
                    android:background="@color/Transparent" />
            </android.support.percent.PercentFrameLayout>
            <android.support.percent.PercentFrameLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
                <TextView
                    app:layout_widthPercent="30%"
                    app:layout_heightPercent="100%"
                    android:text="开始时间："
                    android:textSize="20sp"
                    android:layout_gravity="start|center_vertical"
                    android:gravity="start|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    app:layout_widthPercent="70%"
                    app:layout_heightPercent="100%"
                    android:layout_gravity="end"
                    android:id="@+id/selectTimeBegin"
                    android:gravity="start|center_vertical"
                    android:textSize="22sp"
                    android:text="00:00"
                    android:textColor="@color/Blue"
                    android:background="@color/Transparent" />
            </android.support.percent.PercentFrameLayout>
            <android.support.percent.PercentFrameLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">
                <TextView
                    app:layout_widthPercent="30%"
                    app:layout_heightPercent="100%"
                    android:text="持续分钟："
                    android:textSize="20sp"
                    android:layout_gravity="start|center_vertical"
                    android:gravity="start|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    app:layout_widthPercent="70%"
                    app:layout_heightPercent="100%"
                    android:layout_gravity="end"
                    android:orientation="horizontal"
                    android:layout_width="match_parent">
                    <ImageView
                        android:contentDescription="@string/my_null"
                        android:id="@+id/b_sub"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:background="@drawable/left"
                        android:layout_gravity="center_vertical"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        />
                    <TextView
                        android:id="@+id/time"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:textColor="@color/Blue"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="60"/>
                    <ImageView
                        android:contentDescription="@string/my_null"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/b_add"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:background="@drawable/right"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        />
                </LinearLayout>
            </android.support.percent.PercentFrameLayout>
            <Button
                android:id="@+id/b_date"
                android:text="选择成员"
                style="@style/MyButton" />
        </LinearLayout>
    </ScrollView>

</android.support.percent.PercentFrameLayout>